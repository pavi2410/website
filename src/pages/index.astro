---
import ProjectCard from "@/components/ProjectCard.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Tag from "@/components/Tag.astro";
import Header from "@/components/Header.astro";

import projectsData from "@/data/projects.json";
import { Icon } from "astro-icon/components";
---

<BaseLayout
  title="Pavitra Golchha - Software Developer | pavi2410"
  description="Welcome to Pavitra Golchha's personal website. Discover my projects, blog posts about web development, programming, and technology. Known as pavi2410 online."
  permalink="/"
  keywords="Pavitra Golchha, pavi2410, software developer, web development, programming, blog, projects"
