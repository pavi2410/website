---
import { Heading, Tag, Icon, Container, Wrap, Link } from "@chakra-ui/react"
import { FaTags, FaArrowLeft } from 'react-icons/fa'
import { formatDate, pickColorSchemeByStringHash } from "../util/util"
// import { components } from "./MdxComponents"

const { content } = Astro.props;

---
<Container maxW="4xl" py={8}>
  <!-- <Head>
    <title>{content.title}</title>
    <meta name="description" content={content.description || content.title} />
  </Head> -->
  <a href='/blog'>
    <Link><Icon as={FaArrowLeft} /> Back to blog list</Link>
  </a>
  <Heading as="h1" size="2xl" fontWeight="900" lineHeight="1.3" py={4} pb={8}>{content.title}</Heading>
  <p><b>Pavitra Golchha</b> â€¢ <i>Published on</i> {formatDate(content.createdAt)}</p>
  <Wrap py={8} align="center">
    <Icon as={FaTags} color="neutral.700" />
    {content.tags.map((tag, i) => <Tag key={i} colorScheme={pickColorSchemeByStringHash(tag)}>{tag}</Tag>)}
  </Wrap>
  <slot />
</Container>
