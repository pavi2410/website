---
import { Icon } from "astro-icon/components";
import ThemeToggle from "./ThemeToggle";

const links = [
  { href: "/blog", label: "Blog" },
  { href: "/tools", label: "Tools" },
  { href: "/resume", label: "Resume" },
]
---

<header class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-full max-w-xl px-4 transition-all duration-300">
  <nav class="backdrop-blur-xl bg-white/80 dark:bg-neutral-900/80 border-2 border-neutral-900 dark:border-neutral-700 shadow-[4px_4px_0px_rgba(0,0,0,1)] dark:shadow-[4px_4px_0px_rgba(0,0,0,0.5)] rounded-full px-4 sm:px-6 h-14 flex items-center justify-between font-bricolage">
    <a href="/" class="font-black text-lg sm:text-xl hover:text-emerald-600 dark:hover:text-emerald-400 hover:scale-105 hover:-rotate-2 transition-all duration-300">
      pavi<span class="text-blue-600 dark:text-blue-400">2410</span>
    </a>

    <div class="flex items-center gap-0.5 sm:gap-2">
      {links.map(({ href, label }) => (
        <a
          href={href}
          class="px-2 sm:px-3 py-1.5 rounded-full text-xs sm:text-sm font-bold hover:bg-neutral-900 hover:text-white dark:hover:bg-white dark:hover:text-neutral-900 transition-all duration-300 hover:scale-105"
        >
          {label}
        </a>
      ))}

      <div class="w-px h-5 sm:h-6 bg-neutral-300 dark:bg-neutral-700 mx-1"></div>

      <a
        href="/blog/rss.xml"
        class="p-1.5 sm:p-2 rounded-full hover:bg-yellow-400 hover:text-neutral-900 transition-all duration-300 hover:scale-110 hover:rotate-12"
        aria-label="RSS Feed"
        title="RSS Feed"
      >
        <Icon name="tabler:rss" class="w-4 h-4 sm:w-5 sm:h-5" />
      </a>

      <div class="hover:scale-110 hover:-rotate-12 transition-all duration-300">
        <ThemeToggle client:load />
      </div>
    </div>
  </nav>
</header>
