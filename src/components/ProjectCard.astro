---
import { pickColorSchemeByStringHash } from "@/util";
import Tag from "./Tag.astro";

const {
  project: { icon, title, description, url, techStack },
} = Astro.props;
---

<a
  href={url}
  target="_blank"  
  rel="noopener noreferrer"
  class="backdrop-blur bg-rose-500/5 shadow-2xl shadow-amber-500/30 outline-1 outline-gray-500/30 transition-all hover:-translate-y-3 hover:scale-x-105 flex flex-col sm:flex-row max-w-sm rounded-lg overflow-hidden p-8 space-y-4 md:space-y-0 md:space-x-4 items-start"
>
  <div>
    <img src={icon} alt={title} width="96" height="96" />
  </div>
  <div class="flex flex-col">
    <div class="text-2xl font-bold leading-none">{title}</div>
    <div class="mt-2">{description}</div>
